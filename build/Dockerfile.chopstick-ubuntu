FROM golang:1.17-alpine as build
WORKDIR /app

COPY go.mod .
COPY go.sum .
RUN go mod download

COPY packages /app/packages
RUN go build -o /app/chopstick /app/packages/chopstick/cmd/chopstick.go

FROM golang:1.17-alpine as runtime

RUN apk add --update docker openrc
RUN rc-update add docker boot
COPY --from=build /app/chopstick /bin/chopstick

CMD [ "/bin/chopstick" ]